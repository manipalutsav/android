<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.creativecodes.maheutsav2019">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/utsav_logo_small"
        android:label="@string/app_name"
        android:roundIcon="@drawable/utsav_logo_small"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity android:name=".Results"></activity>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_home_screen"
            android:theme="@style/MyMaterialTheme.NoActionBar" />
        <activity
            android:name=".web_view"
            android:supportsRtl="true"
            android:usesCleartextTraffic="true" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <activity android:name=".CCClist" />
        <activity android:name=".Home_screen" />
        <activity android:name=".MapsActivity" />
        <activity android:name=".Rules" />
        <activity android:name=".jsoncall" />
        <activity android:name=".Notifications" />
        <activity
            android:name=".ContactUs"
            android:parentActivityName=".Home_screen"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Event_list"
            android:label="@string/title_activity_event_list" />
        <activity
            android:name=".Feedback"
            android:label="Feedback" />
        <activity
            android:name=".SplashScreen"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>