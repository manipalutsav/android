<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"


    android:id="@+id/eventLayout"
    >


        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="5sp"
            android:background="@drawable/editbox_customized"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/eventnamerl"
                android:background="@color/colorPrimary"

                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20sp"
            android:tint="#ffffff"
                    android:layout_marginLeft="10sp"
                    android:layout_height="20sp"

                    android:id="@+id/imagevieweventname"
                    android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/eventName"
                android:drawablePadding="5sp"
                android:layout_toRightOf="@+id/imagevieweventname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"

                android:drawableTint="#ffffff"
                android:text=" Event Name"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold" />
            </RelativeLayout>
            <ImageView
                android:id="@+id/imageviewtime"
                android:layout_width="20sp"
                android:layout_height="20sp"

                android:layout_marginLeft="10sp"

                android:layout_marginTop="10sp"
                android:layout_below="@+id/eventnamerl"
                android:tint="#ff5800" />

            <ImageView
                android:id="@+id/imageviewvenue"
                android:layout_width="20sp"

android:tint="@color/colorPrimary"
                android:layout_height="20sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"

                android:layout_below="@+id/eventorg"

              />

            <ImageView
                android:id="@+id/imageviewdescription"
                android:layout_width="20sp"

                android:tint="@color/colorPrimary"
                android:visibility="gone"
                android:layout_height="20sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"

                android:layout_below="@+id/imageviewvenue"

                />

            <ImageView
                android:id="@+id/imagevieworg"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginTop="10sp"

                android:layout_marginLeft="10sp"

                android:layout_below="@+id/eventVenue"

                android:tint="@color/colorPrimary" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/eventVenue"
                android:drawablePadding="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"

                android:layout_toRightOf="@+id/imageviewtime"



                android:layout_height="wrap_content"
                android:text="  time"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_below="@+id/eventnamerl"
                android:textSize="13sp"
                android:drawableTint="@color/colorPrimary"


                />

            <TextView
                android:id="@+id/eventorg"
                android:layout_width="wrap_content"

                android:layout_marginTop="10sp"

            android:layout_marginLeft="10sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventVenue"

                android:layout_toRightOf="@+id/imagevieworg"
                android:drawablePadding="5sp"
                android:drawableTint="@color/colorPrimary"
                android:text="  Organisers"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/eventTime"
                android:layout_marginLeft="10sp"
                android:layout_height="wrap_content"
                android:text="  venue"

        android:layout_below="@+id/eventorg"
                android:layout_marginTop="10sp"
android:layout_marginBottom="10sp"

                android:layout_toRightOf="@+id/imageviewvenue"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:drawableTint="@color/colorPrimary"

                android:textSize="13sp"
               />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/eventdesc"
                android:layout_marginLeft="10sp"
                android:layout_height="wrap_content"
                android:text="  venue"

                android:visibility="gone"
                android:layout_below="@+id/eventTime"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"

                android:layout_toRightOf="@+id/imageviewdescription"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:drawableTint="@color/colorPrimary"

                android:textSize="13sp"
                />


        </RelativeLayout>


</RelativeLayout>